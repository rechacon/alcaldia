                        <field name="date"/>
                        <field name="date_due"/>
                        <field name="concept"/>
                        <field name="template_id"/>
                        <field name="tax_id"/>
                        <field name="classifier_id"/>
                        <field name="aliquot"/>
                        <field name="income"/>
