<?xml version="1.0"?>
<odoo>

	<record id="view_wizard_hr_constancy_work_form" model="ir.ui.view">
		<field name="name">constancy_work_wizard.form</field>
		<field name="model">hr_constancy_work</field>
		<field name="arch" type="xml">
			<form string="Imprimir Constancia de Trabajo">
				<group col="4" colspan="4">
					<field name="type_constancy" required="1"/>
					<field name="employee_id" required="1"/>
				</group>
				<footer>
					<button name="action_print_report" type="object" string="Imprimir" class="btn-primary"/>
	                <span class="or_cancel"> o
	                    <button special="cancel" string="Salir" type="object" class="btn-danger"/>
	                </span>
				</footer>
			</form>
		</field>
	</record>

	<record id="action_wizard_hr_constancy" model="ir.actions.act_window">
		<field name="name">Constancia de Trabajo Asistente</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">hr_constancy_work</field>
		<field name="view_mode">form</field>
		<field name="view_id" ref="view_wizard_hr_constancy_work_form"/>
		<field name="target">new</field>
	</record>

    <menuitem id="menu_constancia_work" name="Constancia de Trabajo" parent="hr.menu_hr_root" action="action_wizard_hr_constancy" sequence="30"/>

</odoo>