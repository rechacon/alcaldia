<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="hr_employee_child_view_tree" model="ir.ui.view">
        <field name="name">hr.employee.child.view.tree</field>
        <field name="model">hr.employee.child</field>
        <field name="arch" type="xml">
            <tree string="Hijos/Hijas" editable="top">
                <field name="name"/>
                <field name="birth_date"/>
                <field name="academic_degree_id"/>
                <field name="age"/>
                <field name="certificate"/>
                <field name="constancy"/>
            </tree>
        </field>
    </record>

    <record id="hr_employee_child_action" model="ir.actions.act_window">
        <field name="name">Hijos/Hijas</field>
        <field name="res_model">hr.employee.child</field>
        <field name="view_mode">tree</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Sin Hijos/Hijas</p>
        </field>
    </record>

    <record id="hr_employee_academic_degree_view_tree" model="ir.ui.view">
        <field name="name">hr.employee.academic.degree.view.tree</field>
        <field name="model">hr.employee.academic.degree</field>
        <field name="arch" type="xml">
            <tree string="Grado Académico" editable="top">
                <field name="description"/>
            </tree>
        </field>
    </record>

    <record id="hr_employee_view_form_inherit" model="ir.ui.view">
        <field name="name">hr.employee.form.l10n.ve.payroll.form.inherit</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='hr_settings']" position="after">
                <page string='Hijos/Hijas' name="childs">
                    <group col='4' colspan='2'>
                        <field name="childs_ids" nolabel="1"/>
                    </group>
                </page>  
                <page string='Beneficios VS Días Trabajados' name="beneficios_vs_trabajados">
                    <group col='4' colspan='2'>
                        <field name="years_worked" readonly="1"/>
                        <field name="years_worked_previous"/>
                        <field name="month_worked" readonly="1"/>
                        <field name="month_accumulated_worked" readonly="1"/>
                        <field name="day_vacational_worked" readonly="1"/>
                        <button name="get_annio_mes" string="Calcular Años y Mes" type="object" class="oe_highlight"/>
                    </group>
                </page>  
            </xpath>
            <xpath expr="//field[@name='certificate']" position="replace">
                <field name="academic_degree_id"/>
            </xpath>
            <xpath expr="//field[@name='job_title']" position="replace"></xpath>
            <xpath expr="//field[@name='job_id']" position="attributes">
                <attribute name="required">1</attribute>
            </xpath>
            <xpath expr="//group[@name='has_work_permit']" position="before">
                <group string="Sector">
                    <field name="sector_laboral_id" string="Tabla Salarial"/>
                    <field name="description" invisible="1"/>
                    <field name="scale_administrative_id" attrs="{'invisible':[('description','!=','Administrativo')], 'required': [('description','=','Administrativo')]}"/>
                </group>
            </xpath>
        </field>
    </record>

    <record id="hr_employee_academic_degree_action" model="ir.actions.act_window">
        <field name="name">Grado Académico</field>
        <field name="res_model">hr.employee.academic.degree</field>
        <field name="view_mode">tree</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Sin Grados Académicos</p>
        </field>
    </record>

    <record id="hr_employee_sector_laboral_view_tree" model="ir.ui.view">
        <field name="name">hr.employee.sector.laboral.view.tree</field>
        <field name="model">hr.employee.sector.laboral</field>
        <field name="arch" type="xml">
            <tree string="Sectores Laborales" editable="top">
                <field name="description"/>
            </tree>
        </field>
    </record>

    <record id="hr_employee_sector_laboral_action" model="ir.actions.act_window">
        <field name="name">Tabla Salarial</field>
        <field name="res_model">hr.employee.sector.laboral</field>
        <field name="view_mode">tree</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Sin Tabla Salarial</p>
        </field>
    </record>

    <menuitem id="hr_employee_academic_degree_menu" name="Grado Académico" action="hr_employee_academic_degree_action" parent="hr.hr_menu_configuration" groups="base.group_user" sequence="10"/>
    <menuitem id="hr_employee_sector_laboral_menu" name="Tabla Salarial" action="hr_employee_sector_laboral_action" parent="hr.hr_menu_configuration" groups="base.group_user" sequence="20"/>
    <menuitem id="hr_employee_childres_menu" name="Hijos/Hijas" action="hr_employee_child_action" parent="hr.hr_menu_configuration" groups="base.group_user" sequence="30"/>

</odoo>